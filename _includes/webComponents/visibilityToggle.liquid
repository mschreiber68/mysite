<h3>Styled with Indicator</h3>
<style>
    mike-visibility-toggle.styledWithIndicator .trigger {
        background-color: #fff;
        display: flex;
        justify-content: space-between;
        padding: 16px 24px;
        border: 1px solid #ccc;
        cursor: pointer;
    }
    mike-visibility-toggle.styledWithIndicator .indicator {
        transition: all 0.2s ease;
    }
    mike-visibility-toggle.styledWithIndicator[show] .indicator {
        transform: rotate(-180deg);
    }
    mike-visibility-toggle.styledWithIndicator .content {
        padding: 16px 24px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-top: 0;
    }
    mike-visibility-toggle.styledWithIndicator [data-content] {
        display: none;
    }
    mike-visibility-toggle.styledWithIndicator[show] [data-content] {
        display: block;
    }
</style>
